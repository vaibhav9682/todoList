<!DOCTYPE html>
<html lang="en">

<head>
    <meta charset="UTF-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Document</title>
    <link rel="stylesheet" href="css/home.css">
    <script src="https://kit.fontawesome.com/bee9754418.js" crossorigin="anonymous"></script>
</head>

<body>
    <h1>TODO App</h1>

    <!-- input detail section -->

    <div class="inputfield">
        <form action="/users/createTask" id="formtag">
            <div class="discdiv flexcolumn">
                <label for="description">DESCRIPTION</label>
                <input type="text" id="description" class="transBack margintop" name="description"
                    placeholder="What do you need to do?">
            </div>

            <div class="addInfo">
                <div class="category flexcolumn">
                    <label for="category">CATEGORY</label>
                    <select name="category" id="category" class="transBack margintop">
                        <option value="no category">Choose a category</option>
                        <option value="personal">Personal</option>
                        <option value="school">School</option>
                        <option value="work">Work</option>
                        <option value="cleaning">Cleaning</option>
                        <option value="other">Other</option>
                    </select>
                </div>
                <div class="date flexcolumn">
                    <label for="due-date">
                        DUE DATE
                    </label>

                    <input type="date" name="date" id="datefield" class="transBack margintop">

                </div>
            </div>

        </form>
    </div>


    <!-- button section -->

    <div class="btnsection">

        <button type="submit" formmethod="post" form="formtag" class="btn" id="addbtn"><i
                class="fa-sharp fa-solid fa-plus"></i>Add
            Task</button>
        <button type="submit" form="taskform" formmethod="get" class="btn" id="delbtn"><i
                class="fa-regular fa-trash-can"></i>Delete Task</button>
    </div>


    <!-- task list -->

    <form action="/users/delform" id="taskform">
        <% for(let i of task_List){%>

            <div class="taskList">

                <input type="checkbox" class="taskInfo" name="task" value=<%=i.id%>>
                <label for="taskInfo">
                    <div class="taskdiv">
                        <div class="task">
                            <h3>
                                <%= i.task%>
                            </h3>
                            <p>
                                <%= i.date%>
                            </p>
                        </div>
                        <div class="showCategory">
                            <p>
                                <%= i.category%>
                            </p>
                        </div>
                    </div>
                </label>

            </div>

            <%} %>
    </form>





    <script type="text/javascript" src="/JS/home.js"></script>
</body>

</html>